{
  "version": "3",
  "templates": [
    {
      "type": 1,
      "title": "Homarr",
      "name": "homarr",
      "description": "O Homarr é um dashboard personalizável que centraliza e organiza o acesso aos seus aplicativos e serviços em um único lugar.",
      "note": "Default username is <b>root</b>. Check the <a href=\"https://docs.gitlab.com/ee/install/docker.html\" target=\"_blank\">GitLab documentation</a> to get started.",
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/wallacepnts/Portainer-Templates/refs/heads/main/logos/homarr.svg",
      "image": "ghcr.io/ajnart/homarr:latest",
      "restart_policy": "unless-stopped",
      "ports": ["80:7575/tcp"],
      "volumes": [
        {
          "container": "/app/data/configs"
        },
        {
          "container": "/app/public/icons"
        },
        {
          "container": "/data"
        }
      ]
    },
    {
      "type": 1,
      "title": "Actual Budget",
      "name": "actual-budget",
      "note": "Não se esqueça de criar a pasta de volume:</p><p>mkdir -p /opt/docker-volumes/actual-budget/data</p>",
      "description": "O Actual Budget é uma ferramenta de planejamento financeiro simples e offline para gerenciar orçamentos e despesas com total controle.",
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/wallacepnts/Portainer-Templates/refs/heads/main/logos/actual.svg",
      "image": "actualbudget/actual-server:latest",
      "env": [
        {
          "name": "PUID",
          "label": "PUID",
          "default": "1000"
        },
        {
          "name": "PGID",
          "label": "PGID",
          "default": "1000"
        },
        {
          "name": "TZ",
          "label": "TZ",
          "default": "America/Sao_Paulo"
        }
      ],
      "ports": ["5006:5006/tcp"],
      "volumes": [
        {
          "container": "/data",
          "bind": "/opt/docker-volumes/actual-budget/data"
        }
      ]
    },
    {
      "type": 1,
      "title": "Nginx",
      "name": "nginx",
      "note": "Não se esqueça de criar a pasta de volume:</p><p>mkdir -p /opt/docker-volumes/nginx/config</p>",
      "description": "O Nginx é um servidor web simples com suporte a PHP.",
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/linuxserver/docker-templates/master/linuxserver.io/img/nginx-banner.png",
      "image": "linuxserver/nginx:latest",
      "env": [
        {
          "name": "PUID",
          "label": "PUID",
          "default": "1000"
        },
        {
          "name": "PGID",
          "label": "PGID",
          "default": "1000"
        },
        {
          "name": "TZ",
          "label": "TZ",
          "default": "America/Sao_Paulo"
        }
      ],
      "ports": [
        "8080:80/tcp",
        "443:443/tcp"
      ],
      "volumes": [
      {
        "container": "/config",
        "bind": "/opt/docker-volumes/nginx/config"
      }
      ],
      "restart_policy": "unless-stopped"
    }
  ]
}
